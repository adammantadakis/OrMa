<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/table_icon" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv1"
                app:layout_constraintStart_toEndOf="@+id/iv1"
                app:layout_constraintTop_toTopOf="@+id/iv1"
                app:srcCompat="@drawable/table_icon" />

            <ImageView
                android:id="@+id/iv22"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv1"
                app:layout_constraintStart_toEndOf="@+id/iv2"
                app:layout_constraintTop_toTopOf="@+id/iv1"
                app:srcCompat="@drawable/table_icon" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="@+id/iv1"
                app:layout_constraintTop_toBottomOf="@+id/iv1"
                app:srcCompat="@drawable/table_icon" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toEndOf="@+id/iv3"
                app:layout_constraintTop_toBottomOf="@+id/iv2"
                app:srcCompat="@drawable/table_icon" />

            <ImageView
                android:id="@+id/iv42"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toEndOf="@+id/iv4"
                app:layout_constraintTop_toBottomOf="@+id/iv2"
                app:srcCompat="@drawable/table_icon" />

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="@+id/iv4"
                app:layout_constraintStart_toStartOf="@+id/iv3"
                app:layout_constraintTop_toBottomOf="@+id/iv3"
                app:srcCompat="@drawable/table_icon" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="@+id/iv5"
                app:layout_constraintStart_toStartOf="@+id/iv5"
                app:layout_constraintTop_toBottomOf="@+id/iv5"
                app:srcCompat="@drawable/table_icon" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv1"
                app:layout_constraintEnd_toEndOf="@+id/iv1"
                app:layout_constraintStart_toStartOf="@+id/iv1"
                app:layout_constraintTop_toTopOf="@+id/iv1" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A2"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv2"
                app:layout_constraintEnd_toEndOf="@+id/iv2"
                app:layout_constraintStart_toStartOf="@+id/iv2"
                app:layout_constraintTop_toTopOf="@+id/iv2" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv3"
                app:layout_constraintEnd_toEndOf="@+id/iv3"
                app:layout_constraintStart_toStartOf="@+id/iv3"
                app:layout_constraintTop_toTopOf="@+id/iv3" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B2"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv4"
                app:layout_constraintEnd_toEndOf="@+id/iv4"
                app:layout_constraintStart_toStartOf="@+id/iv4"
                app:layout_constraintTop_toTopOf="@+id/iv4" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv5"
                app:layout_constraintEnd_toEndOf="@+id/iv5"
                app:layout_constraintStart_toStartOf="@+id/iv5"
                app:layout_constraintTop_toTopOf="@+id/iv5" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv6"
                app:layout_constraintEnd_toEndOf="@+id/iv6"
                app:layout_constraintStart_toStartOf="@+id/iv6"
                app:layout_constraintTop_toTopOf="@+id/iv6" />

        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>
</ScrollView>